{
  "storage_types": {
    "local": {
      "name": "本地",
      "configs": [
        {
          "key": "local_cdn_domain",
          "name": "CDN域名",
          "type": "text",
          "default": "",
          "placeholder": "例如：cdn.example.com（自动添加https://）"
        }
      ]
    },
    "oss": {
      "name": "OSS",
      "configs": [
        {
          "key": "oss_endpoint",
          "name": "Endpoint",
          "type": "text",
          "default": "",
          "placeholder": "例如：oss-cn-hangzhou.aliyuncs.com",
          "half_width": true
        },
        {
          "key": "oss_bucket",
          "name": "Bucket",
          "type": "text",
          "default": "",
          "placeholder": "存储空间名称",
          "half_width": true
        },
        {
          "key": "oss_access_key_id",
          "name": "AccessKey ID",
          "type": "password",
          "default": "",
          "placeholder": "阿里云AccessKey ID",
          "half_width": true
        },
        {
          "key": "oss_access_key_secret",
          "name": "AccessKey Secret",
          "type": "password",
          "default": "",
          "placeholder": "阿里云AccessKey Secret",
          "half_width": true
        },
        {
          "key": "oss_cdn_domain",
          "name": "CDN域名",
          "type": "text",
          "default": "",
          "placeholder": "例如：cdn.example.com（自动添加https://）"
        }
      ]
    },
    "s3": {
      "name": "S3",
      "configs": [
        {
          "key": "s3_endpoint",
          "name": "Endpoint",
          "type": "text",
          "default": "",
          "placeholder": "例如：s3.amazonaws.com",
          "half_width": true
        },
        {
          "key": "s3_region",
          "name": "Region",
          "type": "text",
          "default": "",
          "placeholder": "例如：us-east-1",
          "half_width": true
        },
        {
          "key": "s3_bucket",
          "name": "Bucket",
          "type": "text",
          "default": "",
          "placeholder": "存储桶名称",
          "half_width": true
        },
        {
          "key": "s3_access_key_id",
          "name": "Access Key ID",
          "type": "password",
          "default": "",
          "placeholder": "S3 Access Key ID",
          "half_width": true
        },
        {
          "key": "s3_access_key_secret",
          "name": "Access Key Secret",
          "type": "password",
          "default": "",
          "placeholder": "S3 Access Key Secret",
          "half_width": true
        },
        {
          "key": "s3_cdn_domain",
          "name": "CDN域名",
          "type": "text",
          "default": "",
          "placeholder": "例如：cdn.example.com（自动添加https://）",
          "half_width": true
        }
      ]
    },
    "upyun": {
      "name": "又拍云",
      "configs": [
        {
          "key": "upyun_bucket",
          "name": "服务名称",
          "type": "text",
          "default": "",
          "placeholder": "又拍云服务名称",
          "half_width": true
        },
        {
          "key": "upyun_operator",
          "name": "操作员",
          "type": "text",
          "default": "",
          "placeholder": "操作员账号",
          "half_width": true
        },
        {
          "key": "upyun_password",
          "name": "操作员密码",
          "type": "password",
          "default": "",
          "placeholder": "操作员密码",
          "half_width": true
        },
        {
          "key": "upyun_cdn_domain",
          "name": "CDN域名",
          "type": "text",
          "default": "",
          "placeholder": "例如：cdn.example.com（自动添加https://）",
          "half_width": true
        }
      ]
    }
